
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

    <org.chilja.selfmanager.view.RobotoTextView
        android:id="@+id/motivation_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivation"
        android:paddingBottom="@dimen/padding_small"
        style="@style/Text.Header" />

    <org.chilja.selfmanager.view.RobotoTextView
        android:id="@+id/motivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivation"
        android:layout_below="@+id/due_label"
        android:layout_toRightOf="@+id/motivation_label"
        style="@style/Text.Subhead"
        android:paddingBottom="@dimen/padding_large"
        android:paddingTop="@dimen/padding_small"/>

    <org.chilja.selfmanager.view.RobotoTextView
        android:id="@+id/definition_done_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Definition of Done"
        style="@style/Text.Header"
        android:paddingBottom="@dimen/padding_small" />

    <org.chilja.selfmanager.view.RobotoTextView
        android:id="@+id/definition_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Definition of Done"
        android:layout_below="@+id/motivation"
        android:layout_toRightOf="@+id/definition_done_label"
        style="@style/Text.Subhead"
        android:paddingTop="@dimen/padding_small"/>
</LinearLayout>
</android.support.v7.widget.CardView>

