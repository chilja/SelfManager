<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="Text.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Caption.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Body.Primary">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Text.Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Subhead.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Subhead.Primary">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Menu">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Title.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title.Primary">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Text.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Headline.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Display1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Text.Display1.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Display2">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="Text.Display2.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Display3">
        <item name="android:textSize">56sp</item>
    </style>

    <style name="Avatar">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="RaisedButton" parent="Text.Button">
        <item name="android:layout_width">202dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="elevation">16dp</item>
    </style>

</resources>